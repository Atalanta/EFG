<%= render "user_management/password_not_set_dialog", user: @user %>

<%= simple_form_for @user do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input(:disabled, wrapper: :checkbox) unless @user.new_record? %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', value: @user.new_record? ? 'Create Premium Collector User' : 'Update Premium Collector User' %>
  </div>
<% end %>

<% if @user.persisted? && @user.locked? %>
  <%= simple_form_for @user, url: unlock_premium_collector_user_path(@user), method: :post do |f| %>
    <%= f.button :submit, value: 'Unlock User' %>
  <% end %>
<% end %>
