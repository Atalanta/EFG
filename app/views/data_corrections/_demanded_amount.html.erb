<%= simple_form_row 'Demanded Amount', @loan.dti_demand_outstanding.try(:format) %>
<%= f.input :demanded_amount, as: :currency, label: 'New Demanded Amount' %>

<% unless @loan.efg_loan? %>
  <%= simple_form_row 'Demanded Interest', @loan.dti_interest.try(:format) %>
  <%= f.input :demanded_interest, as: :currency, label: 'New Demanded Interest' %>
<% end %>
