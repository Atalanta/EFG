<%= simple_form_for [@lender, @loan_allocation], html: { class: 'form-horizontal form-loan-allocation' } do |f| %>
  <% if @loan_allocation.new_record? %>
    <%= f.input :allocation_type_id, as: :radio_buttons, collection: LoanAllocationType.all, wrapper_html: { class: 'radio-buttons-inline' } %>
  <% else %>
    <div class="control-group">
      <div class="control-label"><%=t 'simple_form.labels.loan_allocation.allocation_type_id' %></div>
      <div class="controls"><%= @loan_allocation.allocation_type.name %></div>
    </div>
  <% end %>

  <%= f.input :description %>

  <% if @loan_allocation.new_record? %>
    <%= f.input :starts_on, as: :quick_date %>
    <%= f.input :ends_on, as: :quick_date %>
  <% else %>
    <div class="control-group">
      <div class="control-label"><%=t 'simple_form.labels.loan_allocation.starts_on' %></div>
      <div class="controls"><%= @loan_allocation.starts_on.to_s(:screen) %></div>
    </div>
    <div class="control-group">
      <div class="control-label"><%=t 'simple_form.labels.loan_allocation.ends_on' %></div>
      <div class="controls"><%= @loan_allocation.ends_on.to_s(:screen) %></div>
    </div>
  <% end %>

  <%= f.input :allocation, as: :currency %>

  <% if @loan_allocation.new_record? %>
    <%= f.input :guarantee_rate, as: :string %>
    <%= f.input :premium_rate, as: :string %>
  <% else %>
    <div class="control-group">
      <div class="control-label"><%=t 'simple_form.labels.loan_allocation.guarantee_rate' %></div>
      <div class="controls"><%= @loan_allocation.guarantee_rate %></div>
    </div>
    <div class="control-group">
      <div class="control-label"><%=t 'simple_form.labels.loan_allocation.premium_rate' %></div>
      <div class="controls"><%= @loan_allocation.premium_rate %></div>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', value: @loan_allocation.new_record? ? 'Create Lender Limit' : 'Update Lender Limit' %>
  </div>
<% end %>
