<div class="page-header">
  <h1>Forgot Your Username?</h1>
</div>

<%= simple_form_for @usernames_reminder, method: :post, url: usernames_reminder_path, html: { class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :email %>

  <div class="form-actions">
    <%= f.button :submit, "Send Username Reminder", class: 'btn btn-primary', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>

