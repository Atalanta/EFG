<div class="page-header">
  <h1>Contact Support</h1>
</div>

<p>Please fill in your support request below and your administrator will respond as soon as possible.</p>

<hr>

<%= simple_form_for(@support_request, url: contact_support_path, html: { class: 'form-horizontal' }) do |f| %>

  <%= f.input :message, as: :text, input_html: { cols: 40, rows: 8 } %>

  <div class="form-actions">
    <%= f.button :submit, value: 'Submit', class: 'btn-primary' %>
  </div>

<% end %>
