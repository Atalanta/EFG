<!DOCTYPE html>
<html>
<head>
  <title>EFG</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to 'Enterprise Finance Guarantee', root_path, class: 'brand' %>

        <% if user_signed_in? %>
          <ul class="nav">
            <li><%= link_to 'Loan Portfolio', loan_states_path %></li>
            <li><%= link_to 'New Loan', new_eligibility_check_path %></li>
            <li class="dropdown">
              <%= link_to '#', "class" => "dropdown-toggle", "data-toggle" => "dropdown" do %>
                Help <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to 'Frequently asked questions', '#' %></li>
                <li><%= link_to "Guidance on the '5-year eligibility rule'", '#' %></li>
                <li><%= link_to 'SFLG Scheme Manual', '#' %></li>
                <li><%= link_to 'SFLG Web Portal Training Material', '#' %></li>
                <li><%= link_to 'SFLG Web portal manual', '#' %></li>
                <li><%= link_to 'User administration guide', '#' %></li>
              </ul>
              <li><%= link_to 'Manage Users', users_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
            </li>
          </ul>

          <ul class="nav secondary">
            <li>
              <%= render "search/loan_lookup_form" %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
