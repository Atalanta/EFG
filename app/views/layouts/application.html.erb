<!DOCTYPE html>
<html>
<head>
  <title>EFG</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to 'Enterprise Finance Guarantee', '#', class: 'brand' %>

        <% if user_signed_in? %>
          <ul class="nav">
            <li><%= link_to 'Check Eligibility', new_eligibility_check_path %></li>
            <li><%= link_to 'User Management', users_path %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
