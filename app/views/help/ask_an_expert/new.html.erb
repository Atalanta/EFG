<div class="page-header">
  <h1>Ask an Expert</h1>
</div>

<% if @experts.any? %>
  <p>Please fill in your support request below.</p>

  <hr>

  <%= simple_form_for @ask_an_expert, url: help_ask_an_expert_path, html: { class: 'form-horizontal form-ask-an-expert' } do |f| %>
    <div class="control-group to">
      <div class="control-label">To</div>
      <div class="controls">
        <% @experts.each do |expert| %>
          <span class="badge badge-info"><%= expert.name %></span>
        <% end %>
      </div>
    </div>

    <%= f.input :message, as: :text, input_html: { cols: 80, rows: 8 } %>

    <div class="form-actions">
      <%= f.button :submit, value: 'Submit', class: 'btn-primary' %>
    </div>
  <% end %>
<% else %>
  <p class="alert alert-error">Sorry there are no experts assigned.</p>
<% end %>
