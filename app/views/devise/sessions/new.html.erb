<div class="page-header">
  <h1>Sign In</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="alert alert-warning" style="color: black;">
    <p>
      If you haven't changed your password since 8pm on Wednesday 6th March you must
      <%= link_to "click here", new_password_path(:user) %>
      to request a password reset.
    </p>
    <p>
      From 6th March we have changed the Enterprise Finance Guarantee password policy. You must now change your password at least once every 90 days.
    </p>
  </div>

  <%= f.input :username, required: false, autofocus: true %>
  <%= f.input :password, required: false %>

  <%= render 'devise/shared/links' %>
  <%= link_to 'Forgot your username?', new_usernames_reminder_path %>

  <div class="form-actions">
    <%= f.button :submit, 'Sign In', class: 'btn btn-primary' %>
  </div>
<% end %>
