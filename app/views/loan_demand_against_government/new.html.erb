<%= breadcrumbs_for_loan(@loan, 'Demand Against Government Guarantee') %>

<div class="page-header">
  <h1>Demand Against Government Guarantee</h1>
</div>

<p>From this page you can record the date on which a facility was repaid.</p>

<hr>

<%= simple_form_for(@loan_demand_against_government, url: loan_demand_against_government_path(@loan), html: { class: 'form-horizontal form-loan-demand-against-government' }) do |f| %>
  <%= f.input(:dti_demanded_on, as: :quick_date, input_html: { disabled: true }) %>
  <%= f.input(:dti_demand_outstanding, as: :currency) %>
  <%= f.input(:dti_interest, as: :currency) unless @loan_demand_against_government.efg_loan? %>
  <%= f.input(:dti_ded_code, as: :ded_code, select_options: ded_code_options_for_select, prompt: "Select failure reason") %>
  <%= f.input(:dti_reason, as: :text, input_html: { rows: 3 }) %>
  <%= f.input(:dti_break_costs, as: :currency) unless @loan_demand_against_government.efg_loan? %>

  <div class="form-actions">
    <%= f.button :submit, value: 'Submit', class: 'btn-primary' %>
  </div>
<% end %>
