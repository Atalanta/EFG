<div class="page-header">
  <h1>Loan Portfolio</h1>
</div>

<table class="table table-striped table-loan-states">
  <thead>
    <tr>
      <th>State</th>
      <th class="loan-count">Legacy SFLG</th>
      <th class="loan-count">SFLG</th>
      <th class="loan-count">EFG</th>
      <th class="loan-count">Total</th>
    </tr>
  </thead>
  <tbody>
    <% @loan_states.each do |loan_state| %>
      <tr id="<%= loan_state.state %>_loans">
        <th class="loan-state"><%= link_to loan_state.state.titleize, loan_state_path(loan_state.state) %></th>
        <td class="loan-count"><%= loan_state.legacy_sflg_loans_count %></td>
        <td class="loan-count"><%= loan_state.sflg_loans_count %></td>
        <td class="loan-count"><%= loan_state.efg_loans_count %></td>
        <td class="loan-count"><%= loan_state.total_loans %></td>
      </tr>
    <% end %>
  </tbody>
</table>
