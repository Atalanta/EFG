<div class="page-header">
  <h1>User Management</h1>
</div>

<div class="actions">
  <%= link_to %{<i class="icon-plus"></i> New User}.html_safe, new_lender_user_path, class: 'btn' %>
</div>

<table id="user_list" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Locked</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, edit_lender_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%=friendly_boolean user.locked %></td>
        <td class="options"><%= set_password_options(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
