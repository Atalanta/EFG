<%= breadcrumbs %>

<div class="page-header">
  <h1>Phases</h1>
</div>

<div class="actions">
  <%= link_to %{<i class="icon-plus"></i> New Phase}.html_safe, new_phase_path, class: 'btn' %>
  <%= link_to %{<i class="icon-plus"></i> Bulk Create Lending Limits}.html_safe, new_bulk_lending_limit_path, class: 'btn' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @phases.each do |phase| %>
      <tr>
        <td><%= link_to phase.name, edit_phase_path(phase) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
