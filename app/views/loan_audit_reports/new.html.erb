<%= breadcrumbs %>

<div class="page-header">
  <h1>Loan Audit Report</h1>
</div>

<p>From this page you can perform loan audit data extracts using selected criteria.</p>

<hr>

<%= simple_form_for(@loan_audit_report, url: loan_audit_report_path, html: { class: 'form-horizontal loan-report' }) do |f| %>

  <%= f.input :facility_letter_start_date, as: :quick_date %>

  <%= f.input :facility_letter_end_date, as: :quick_date %>

  <%= f.input :created_at_start_date, as: :quick_date %>

  <%= f.input :created_at_end_date, as: :quick_date %>

  <%= f.input :last_modified_start_date, as: :quick_date %>

  <%= f.input :last_modified_end_date, as: :quick_date %>

  <%= f.input :event_id, as: :select, collection: @loan_events, prompt: "All" %>

  <%= f.input :audit_records_start_date, as: :quick_date %>

  <%= f.input :audit_records_end_date, as: :quick_date %>

  <%= f.input :state, as: :select, collection: loan_state_options(LoanAuditReport::ALLOWED_LOAN_STATES), prompt: false %>

  <%= f.input :lender_id, as: :select, collection: Lender.order_by_name, prompt: "All" %>

  <div class="form-actions">
    <%= f.button :submit, value: 'Submit', class: 'btn-primary' %>
  </div>

<% end %>
