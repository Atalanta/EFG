<%= render "user_management/password_not_set_dialog", user: @user %>

<%= simple_form_for @user do |f| %>
  <% if @user.new_record? %>
    <%= f.input :lender_id, as: :select, collection: Lender.order_by_name, prompt: 'Please select' %>
  <% end %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input(:locked, wrapper: :checkbox) unless @user.new_record? %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', value: @user.new_record? ? 'Create Lender Admin' : 'Update Lender Admin' %>
  </div>
<% end %>
