<%= breadcrumbs(
  link_to('Lenders', lenders_path),
  'Edit Lender'
) %>

<div class="page-header">
  <h1>Edit Lender</h1>
</div>

<%= render 'form' %>

<% if @lender.active %>
  <%= simple_form_for @lender, url: deactivate_lender_path(@lender), method: :post do |f| %>
    <%= f.button :submit, value: 'Deactivate Lender' %>
  <% end %>
<% else %>
  <%= simple_form_for @lender, url: activate_lender_path(@lender), method: :post do |f| %>
    <%= f.button :submit, value: 'Activate Lender' %>
  <% end %>
<% end %>
